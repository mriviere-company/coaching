<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Coaching">
        <title>{% block title %}{{ 'title'|trans }}{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app_scss') }}
            <link rel="shortcut icon" type="image/x-image" href="/img/favicon.ico"/>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body class="coaching">

    {%- block top_menu -%}
        {% if is_mobile() %}
            {% include 'menu/_mobile_top_menu.html.twig' %}
        {% else  %}
            {% include 'menu/_top_menu.html.twig' %}
        {% endif  %}
    {%- endblock -%}

    {{ render(controller('App\\Controller\\TrackController::trackAction', {'currentPage': app.request.attributes.get('_route')})) }}
        {% block body %}{% endblock %}


    {%- block footer -%}
        {% if is_mobile() %}
            {% include 'menu/_mobile_footer.html.twig' %}
        {% else  %}
            {% include 'menu/_footer.html.twig' %}
        {% endif  %}
    {%- endblock -%}

        {% block javascripts %}
            {{ encore_entry_script_tags('app_js') }}
            <script src="https://kit.fontawesome.com/bb0e26a94b.js" crossorigin="anonymous"></script>
            <script
                    src="https://code.jquery.com/jquery-3.6.0.min.js"
                    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                    crossorigin="anonymous">
            </script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap-confirmation2@4.2.1/dist/bootstrap-confirmation.js" integrity="sha256-2SsP2WngPrDCr0oyzq5DM/nBt71S+/Ee/hCxskXPdeM=" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        {% endblock %}
    </body>
</html>
